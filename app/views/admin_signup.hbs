{{> welcomemenu _id="signup" }}

<section class="ui raised segment">
    <div class="ui two column grid">
        <div class="ui ten wide column">
            <div class="ui stacked fluid form segment">
                <form action="/admin_register" method="POST">
                    <h3 class="ui header">Create MyTweet administrator account</h3>
                    <div class="two fields">
                        <div class="field">
                            <label>First Name</label>
                            <input placeholder="First Name" type="text" name="firstName">
                        </div>
                        <div class="field">
                            <label>Last Name</label>
                            <input placeholder="Last Name" type="text" name="lastName">
                        </div>
                    </div>
                    <div class="field">
                        <label>Email</label>
                        <input placeholder="Email" type="text" name="email">
                    </div>
                    <div class="field">
                        <label>Key</label>
                        <input type="password" name="password">
                    </div>
                    <button class="ui blue submit button"><i class="twitter square icon"></i>Create</button>
                </form>
                {{> formerror }}
            </div>
        </div>
        <div class="ui six wide column">
            <aside class="ui five wide column">
                <img src="images/signup.jpg" class="ui medium image">
            </aside>
        </div>
    </div>
</section>