{{> welcomemenu _id="login" }}

<section class="ui raised segment">
    <div class="ui grid">
        <aside class="ui six wide column">
            <img src="images/tweet.jpg" class="ui medium image">
        </aside>
        <div class="ui ten wide column fluid form">
            <div class="ui stacked segment">
                <form action="/authenticate" method="POST">
                    <h3 class="ui header">Sign in to MyTweet</h3>
                    <div class="field">
                        <label>Username</label> <input placeholder="Email" type="text"
                                                    name="email">
                    </div>
                    <div class="field">
                        <label>Password</label> <input type="password" name="password">
                    </div>
                    <button class="ui blue submit button"><i class="sign in icon"></i>Sign in</button>
                </form>
                {{> formerror }}
            </div>
        </div>
    </div>
    </div>
</section>