<section class="ui raised segment">
    <div class="ui grid">
        <asside class="six wide column">
            <img src="images/admintimeline.jpg" class="ui medium image">
        </asside>
        <article class="ten wide column">
            <h4>Timeline Total posts: {{tweets.length}}</h4>
            <form class="ui form" action="/adminDeleteTweet" method="POST">
                <table class="ui selectable striped table segment">
                    <thead>
                    <tr>
                        <th>Select </th>
                        <th>Subject</th>
                        <th>From   </th>
                        <th>Sent   </th>
                        <th>Message</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each tweets}}
                        <tr>
                            <td>
                                <div class="ui checkbox">
                                    <input type="checkbox" id="checkbox" name="user" value="{{_id}}">
                                    <label></label>
                                </div>
                            </td>
                            <td> {{subject}}       </td>
                            <td> {{sender.email}}  </td>
                            <td> {{date}}          </td>
                            <td> {{text}}          </td>
                        </tr>
                    {{/each}}
                    </tbody>
                    <tfoot class="full-width">
                    <tr>
                        <th colspan="4">
                            <div class="ui buttons">
                                <button class="ui positive button" id="delete_tweet">Delete selected
                                </button>
                                <div class="or"></div>
                                <button class="ui negative button" id="delete_all" formaction="/adminDeleteTweetsAll">
                                    <i class="remove circle icon"></i>Delete all
                                </button>
                            </div>
                        </th>
                    </tr>
                    </tfoot>
                </table>
            </form>
        </article>
    </div>
</section>